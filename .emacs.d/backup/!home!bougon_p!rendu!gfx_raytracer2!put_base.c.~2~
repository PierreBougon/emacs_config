char		*put_base(unsigned int	nbr, char *base)
{
  unsigned int	base_len;
  int		i;
  char		*num;

  base_len = my_strlen(base);
  if ((num = malloc(sizeof(char) * 11 + 2)) == NULL)
    return (NULL);
  my_bzero(num, 11 + 2);
  num[0] = '0';
  num[1] = 'x';
  i = 2;
  while (nbr / base_len > 1)
    {
      nbr /= base_len;
      if (nbr > 0)
	num[i++] = base[nbr % base_len];
    }
  return (num);
}

int	main(int ac, char **av)
{
  put_base();
}
