#include "dante.h"

int	add_to_open(t_pile **open_pile, t_node *node)
{
  t_pile	*new;
  t_pile	*tmp;

  if (!(new = malloc(sizeof(t_node))))
    return (1);
  new->node = node;
  node->cost = calc_cost(node);
  if (*open_pile == NULL)
    {
      new->next = NULL;
      new->prev = NULL;
      (*open_pile) = new;
      return (0);
    }
  tmp = *open_pile;
  while (tmp && new->node->cost >= tmp->node->cost)
    tmp = tmp->next;
  if (tmp->prev == NULL)
    {
      new->prev = NULL;
      new->next = *open_pile;
      (*open_pile)->prev = new;
      (*open_pile) = new;
    }
  else if (tmp->next == NULL)
    {
      new->next = NULL;
      new->prev = tmp;
      tmp->next = new;
    }
  else
    {
      new->next = tmp->next;
      new->prev = tmp;
      tmp->next->prev = new;
      tmp->next = new;
    }
  return (0);
}

void		depop_root(t_pile *open)
{
  if (open->next)
    open->next->prev = NULL;
  else
    open = NULL;
}

bool		is_on_open(t_node *node, t_pile *open)
{
  t_pile	*tmp;

  tmp = open;
  while (tmp)
    {
      if (tmp->node == node)
	return (true);
      tmp = tmp->next;
    }
  return (false);
}
