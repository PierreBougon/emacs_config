char	*clean_str(char *str)
{
  char  *new;
  int   i;
  int   p;

  if ((new = malloc(sizeof(char) * strlen(str))) == NULL)
    return (NULL);
  new = set_line_null(new, strlen(str));
  i = -1;
  p = 0;
  while (str[++i] != 0)
    {
      if (i % 2 == 0 || i == 19)
        new[p++] = str[i];
    }
  free (str);
  return (new);
}
