int	integer_div(int a, int b)
{
  if (b == 0)
    return (0);
  return (a / b);
}

float	decimal_div(int a, int b)
{
  float	res;

  if (b == 0)
    return (0);
  res = (float)(a / b);
  return (res);
}

void	exec_div(t_div *operation)
{
  if (operation->div_type == INTEGER)
    operation->div_op->res = integer_div(operation->div_op->a,
					 operation->div_op->b);
  else
    operation->div_op->res = decimal_div(operation->div_op->a,
					 operation->div_op->b);
}
