# USEFUL VARIABLES

RM      =	rm -rf

GREEN	=	\033[1;32m

WHITE	=	\033[0m

ECHO	=	echo -e

# SOURCES VARIABLES

MAIN		=	src/

SRC		=	main.c \
			menger.c \
			drawing.h \
			bitmap_header.c

OBJS    	=	$(SRC:.c=.o)


# PROJECT VARIABLES

NAME	=	menger_side

IFLAG	=	-I./

CFLAGS  =	-Wall -Wextra -Werror -std=gnu99

CC      =	gcc $(CFLAGS) $(IFLAG)


# LIBRARY VARIABLES

LDFLAGS =       -lm

# PROJECT RULES

$(NAME)		: 	$(OBJS)
			@$(CC) -o $(NAME) $(OBJS) $(LDFLAGS) $(LIB)

all		:	$(NAME)

clean		:
			@$(RM) $(OBJS)

fclean		: 	clean
			@$(RM) $(NAME)

re		:	fclean all

.c.o		:
			@$(CC) -c $< -o $@

.PHONY		:	all clean fclean re
