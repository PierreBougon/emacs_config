#include "struct.h"

int	my_getnbr(char *str, int bool2)
{
  int	nb;
  int	i;
  int	boole;

  nb = 0;
  i = 0;
  boole = 0;
  if (str == NULL)
    return (free(str, -1);
  if (str[i] == '-')
    {
      nb = -nb;
      i++;
      boole = 1;
    }
  if (str[i] < '0' || str[i] > '9')
    return (1);
  while (str[i])
    {
      nb = 10 * nb + (str[i] - 48);
      i++;
    }
  if (bool2 == 1)
    free(str);
  return (boole == -nb ? -1 : nb);
}
