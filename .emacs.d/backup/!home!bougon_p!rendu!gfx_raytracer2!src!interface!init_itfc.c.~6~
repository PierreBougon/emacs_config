#include "raytracer.h"

int	init_itfc_data(t_itfc *itfc)
{
  itfc->layout = NULL;
  if ((itfc->layout = bunny_load_pixelarray("assets/img/layout.png")) == NULL)
    return (my_puterr("Could not perform bunny_load_pixelarray"));
  /* if ((itfc->context[0] = */
  /*      bunny_load_pixelarray("assets/img/context")) == NULL) */
  /*   return (my_puterr("Could not perform bunny_load_pixelarray")); */
  /* if ((itfc->context[1] = */
  /*      bunny_load_pixelarray(CONTEXT_WIDTH, CONTEXT_HEIGHT)) == NULL) */
  /*   return (my_puterr("Could not perform bunny_load_pixelarray")); */
  itfc->act_context = 0;
  return (0);
}
