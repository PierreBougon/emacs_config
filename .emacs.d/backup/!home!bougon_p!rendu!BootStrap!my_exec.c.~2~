#include <unistd.h>

int	main(int ac, char **av, char **env)
{
  pid_t	cpid;
  int	pipefd[2];

  if (ac != 2)
    return (1);

  pipe(pipefd);
  cpid = fork();

  if (cpid == 0)
    {
      dup2(pipefe[0], 0);
      close(pipefd[1]);
      execve(av[1], NULL, env);
    }
  else
    {
      dup2(pipefd[1], 1);
      close(pipefd[1]);
      execve(av[2], NULL, env);
    }
}
