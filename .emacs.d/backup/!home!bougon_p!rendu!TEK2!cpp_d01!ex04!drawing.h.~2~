#ifndef DRAWING_H_
# define DRAWING_H_

#include <unistd.h>
#include <stdint.h>

typedef struct	s_color
{
  char		argb[4];
  unsigned int	col;
}		t_color;

typedef	struct	s_point
{
  unsigned int	x;
  unsigned int	y;
}		t_point;

void	draw_square(uint32_t **img, t_point *orig, size_t size, uint32_t color);

#endif /* DRAWING_H_  */
