#include "drawing.h"

void		draw_square(uint32_t **img, t_point *orig, size_t size, uint32_t color)
{
  t_point	pos;

  pos.x = orig->x;
  pos.y = orig->y;
  while (pos.x < orig->x + size)
    {
      while (pos.y < orig->y + size)
	{
	  img[pos.y][pos.x] = color;
	  pos.y++;
	}
      pos.x++;
    }
}
