#include "raytracer.h"

int	add_sphere(UNUSED t_data *data)
{
  if (data->wait_click == true
      && data->mbutton == BMB_LEFT
      && data->mstate == GO_DOWN)
    {
      data->itfc.add.need_form = false;
      data->wait_click = false;
      printf("ADD SPHERE\n");
    }
  return (0);
}
