#include "alum1.h"

void	print_gamestruct(int size, int **tab)
{
  int	i;
  int	j;

  i = 0;
  while (j < size + 2)
    {
      i = 0;
      while (i < size * 2 + 1)
	{
	  if (tab[j][i] == 0)
	    printf(" ");
	  else if (tab[j][i] == 1)
	    printf("*");
	  else if (tab[j][i] == 2)
	    printf("|");
	  i++;
	}
      printf("\n");
      j++;
    }
}

int	check_alu(int size, int i, int j)
{
  j = j;
  if (i == size)
    return (2);
  if (i > size - j && i < size + j)
    return (2);
  return (0);
}

int	set_state(int size, int i, int j)
{
  if (j == 0 || j + 1 == size + 2)
    return (1);
  else
    {
      if (i == 0 || i + 1 == size * 2 + 1)
	return (1);
      else
	return (check_alu(size, i, j));
    }
}

int	**init_tab(int size)
{
  int	i;
  int	j;
  int	**tab;

  if ((tab = malloc(sizeof(int *) * (size + 2))) == NULL)
    return (NULL);
  i = -1;
  while (++i < size + 2)
    {
      if ((tab[i] = malloc(sizeof(int) * (size * 2 + 1))) == NULL)
	return (NULL);
    }
  j = 0;
  while (j < size + 2)
    {
      i = 0;
      while (i < size * 2 + 1)
	{
	  tab[j][i] = set_state(size, i, j);
	  i++;
	}
      j++;
    }
  return (tab);
}

int	start_game(int size)
{
  int	**tab;

  tab = init_tab(size);
  print_gamestruct(size, tab);
  return (0);
}

int	main(int ac, char **av, char **env)
{
  int	size;

  if (*env == NULL)
    {
      write(2, "alum1: No environment detected\n", 31);
      exit(1);
    }
  if (ac == 1)
    size = 4;
  else
    size = my_getnbr(av[1]);
  start_game(size);
  return (0);
}
