#include <stdlib.h>
#include <strings.h>
#include "quant.h"

bool	check_finished(int **tab, int width)
{
  int	i;
  int	j;

  j = -1;
  while (tab[++j])
    {
      i = -1;
      while (++i < width)
	{
	  if (tab[j][i] == 1)
	    return (false);
	}
    }
  return (true);
}

int	**init_tab(t_bunny_pixelarray *scott)
{
  int	**tab;
  int	i;

  if (!(tab =
	bunny_malloc(sizeof(int *)
		     * (scott->clipable.clip_height + 1))))
    return (NULL);
  tab[scott->clipable.clip_height] = NULL;
  i = -1;
  while (++i < scott->clipable.clip_height)
    {
      if (!(tab[i] = bunny_malloc(sizeof(int) * scott->clipable.clip_width)))
	return (NULL);
      bzero(tab[i], scott->clipable.clip_width);
    }
  return (tab);
}

void	free_tab(int **tab)
{
  int	i;

  i = -1;
  while (tab[++i])
    {
      bunny_free(tab[i]);
    }
  bunny_free(tab);
}
