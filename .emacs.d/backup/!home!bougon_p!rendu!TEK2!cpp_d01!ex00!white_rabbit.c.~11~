#include <stdlib.h>
#include <time.h>
#include <stdio.h>

int	follow_the_white_rabbit(void)
{
  int	result;
  int	rand;

  result = 0;
  while (1)
    {
      rand = (random() % 37) + 1;
      result += rand;
      printf("%d\n", rand);
      if ((rand >= 34 && rand <= 36) || rand == 13)
	puts("droite");
      else if (rand == 10 || rand == 15 || rand == 23)
	puts("devant");
      else if (rand == 26 || rand % 8 == 0)
	puts("derriere");
      else if ((rand >= 4 && rand <= 6) ||
	       (rand >= 17 && rand <= 21) || rand == 28)
	puts("gauche");
      else if (rand == 37 || result == 397 || result == 421 || rand == 1)
	{
	  puts("LAPIN !!!");
	  return (result);
	}
    }
  return (0);
}

int main()
{
  srandom(1);
  printf("%d\n", follow_the_white_rabbit());
  return (0);
}
