#include "tetris.h"

char		***init_tetriminos()
{
  char		***tetri;
  DIR		*dirp;
  struct dirent	*dir;

  tetri = tetri;
  if ((dirp = opendir("./tetriminos")) == NULL)
    return (NULL);
  while ((dir = readdir(dirp)) != NULL)
    {
      printw(dir->d_name);
    }
  closedir(dirp);
}

char	**init_tab(int line, int col)
{
  char  **tab;
  int   i;

  i = 0;
  if ((tab = malloc(sizeof(char *) * (line + 1))) == NULL)
    return (NULL);
  tab[line] = NULL;
  while (i < line)
    {
      if ((tab[i] = malloc(sizeof(char) * col + 1)) == NULL)
        return (NULL);
      tab[col] = 0;
      i++;
    }
  return (tab);
}
