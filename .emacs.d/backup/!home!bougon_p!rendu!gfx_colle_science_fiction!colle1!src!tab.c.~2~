#include <stdlib.h>
#include <strings.h>

int	**init_tab(t_bunny_pixelarray *scott)
{
  int	**tab;
  int	i;

  if (!(tab = malloc(sizeof(int *) * (scott->clipable.clip_height + 1))))
    return (NULL);
  tab[scott->clipable.clip_height] = NULL;
  i = -1;
  while (++i < scott->clipable.clip_height)
    {
      if (!(tab[i] = malloc(sizeof(int) * scott->clipable.clip_width)))
	return (NULL);
      bzero(tab[i], scott->clipable.clip_width);
    }
  return (tab);
}

void	free_tab(int **tab)
{
  int	i;

  i = -1;
  while (tab[++i])
    {
      free(tab[i]);
    }
  free(tab);
}
