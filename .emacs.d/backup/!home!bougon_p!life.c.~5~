#include <stdbool.h>
#include <stdio.h>

bool	birth()
{
  return (true);
}

double	breathe(double value)
{
  return (value + 0.40);
}

bool	death()
{
  if (rand() % 1000000 == 0)
    return (true);
  else
    return (false);
}

int		main()
{
  bool		living;
  double	oxygen_value;

  living = birth();
  srand(time(NULL));
  while (living)
    {
      printf("I'm free !\n");
      if (oxygen_value <= 0.10)
	oxygen_value = breathe(oxygen_value);
      if (death)
	{
	  printf("I'm dead !\n");
	  break ;
	}
    }
  return (0);
}
