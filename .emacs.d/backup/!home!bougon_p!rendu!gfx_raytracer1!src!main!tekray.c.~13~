#include "ray.h"

void	tekray(const t_bunny_position *screen_info, int *x, int *y, int *z)
{
  /* *x = (screen_info[0].x / 2) - screen_info[1].x; */
  /* *y = (screen_info[0].y / 2) - screen_info[1].y; */
  /* *z = 100; */
  *x = -(screen_info[0].x / 2) + screen_info[1].x;
  *y = (screen_info[0].y / 2) - screen_info[1].y;
  *z = 100;
}
